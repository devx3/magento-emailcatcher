<script type="text/javascript">

function setCookie(cname, cvalue, exdays, cmail, mailvalue) {
    var d = new Date();
    d.setTime(d.getTime() + (exdays*24*60*60*1000));
    var expires = "expires="+d.toUTCString();
    document.cookie = cname + "=" + cvalue + "; " + expires;
    document.cookie = cmail + "=" + mailvalue + "; " + expires;

}

function getCookie(cname, cmail) {
    var name = cname + "=";
    var ca = document.cookie.split(';');
    for(var i=0; i<ca.length; i++) {
        var c = ca[i];
        while (c.charAt(0)==' ') c = c.substring(1);
        if (c.indexOf(name) == 0) return c.substring(name.length, c.length);
    }
    return "";
    
    
    var mail = cmail + "=";
    var cm = document.cookie.split(';');
    for(var i=0; i<cm.length; i++) {
        var e = cm[i];
        while (e.charAt(0)==' ') e = e.substring(1);
        if (e.indexOf(mail) == 0) return e.substring(mail.length, e.length);
    }
    return "";
    
}

